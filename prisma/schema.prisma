// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String
  password        String
  role            Role     @default(USER)
  isEmailVerified Boolean  @default(false)
  Token           Token[]
  address         String?  @default("")
  phoneNumber     String?  @default("")
  birthDay        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Token {
  id          Int       @id @default(autoincrement())
  token       String
  type        TokenType
  expires     DateTime
  blacklisted Boolean
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model Job {
  id           String   @id @default(uuid())
  title        String
  type         String
  city         String
  stateCode    String
  country      String
  description  String
  minSalary    Int
  maxSalary    Int
  currencyCode String
  company      Company  @relation(fields: [companyId], references: [id])
  companyId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Company {
  id           String @id @default(uuid())
  name         String
  description  String
  contactEmail String
  contactPhone String
  jobs         Job[]
}

enum Role {
  USER
  ADMIN
}

enum TokenType {
  ACCESS
  REFRESH
  RESET_PASSWORD
  VERIFY_EMAIL
}
